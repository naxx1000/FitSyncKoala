<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_yellow"
    android:paddingStart="20dp"
    android:paddingTop="30dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_kcal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lt_internet_regular"
        android:padding="10dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_kcal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edit_text"
            android:fontFamily="@font/lt_internet_bold"
            android:hint="Kcal"
            android:inputType="numberDecimal"
            android:lines="1"
            android:minWidth="260dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="254.2" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_dialog_kcal_negative"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Dismiss"
        android:textAppearance="@style/TextAppearance.FitKoala.Button"
        app:layout_constraintStart_toStartOf="@id/til_kcal"
        app:layout_constraintTop_toBottomOf="@id/til_kcal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_dialog_kcal_positive"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Set"
        android:textAppearance="@style/TextAppearance.FitKoala.Button"
        app:layout_constraintEnd_toEndOf="@id/til_kcal"
        app:layout_constraintTop_toBottomOf="@id/til_kcal" />

</androidx.constraintlayout.widget.ConstraintLayout>